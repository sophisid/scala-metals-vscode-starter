{
  "files.watcherExclude": {
    "**/target": true,
    "**/.bloop": true,
    "**/.metals": true,
    "**/.bsp": true
  },
  "metals.javaHome": "",
  "metals.sbtScript": "sbt",
  "metals.scalaVersion": "2.12.18",
  "editor.formatOnSave": true,
  "scalafmt.configPath": ".scalafmt.conf",
  "scalafix.runOnSave": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/java-11-openjdk-amd64",
      "default": true
    }
  ]
}